CXX=g++
CXXFLAGS=-Wall -Wextra -Werror

%.o: %.cpp
	$(CXX) $(CXXFLAGS) $< -c -o $@

jeu: Joueur.o Carte.o Tresor.o Cuivre.o Argent.o Or.o Victoire.o Domaine.o Province.o Duche.o Malediction.o Partie.o Deck.o Pioche.o MainJoueur.o Defausse.o Reserve.o Rebut.o Royaume.o Sorciere.o Festin.o Douve.o Chapelle.o Voleur.o Atelier.o Bucheron.o Laboratoire.o Jardin.o Village.o
	$(CXX) $^ -o $@

.PHONY: run clean

run: jeu
	./$<

clean:
	rm -f *.o *~ *.core 

